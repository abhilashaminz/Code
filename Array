/**
 * 
 */
package arrayRotation;

/**
 * @author aminz
 *
 */
public class quicklyFindleftRotation {

	/**
	 * 
	 */
	public quicklyFindleftRotation() {
		// TODO Auto-generated constructor stub
	}

	/**
	 * @param args
	 */
	public static void main(String[] args) {
				// TODO Auto-generated method stub

		int array[] = {1,2,3,4,5,6};
		int length = array.length;
		int temp[]= new int[2*length];
		preprocess(array,temp,length);
		int k=3;
		rotate(temp,k,length);
	}
	
	static void preprocess(int array[],int temp[],int n){
		 for(int i=0;i<n;i++){
			 temp[i]=temp[i+n]=array[i];
		 }
		
	}
	static void rotate(int temp[],int k,int n){

		//to get the starting point of the rotated array
		int start = k%n;
		for (int i = start; i<start+n;i++){
			System.out.println(temp[i]);
		}
	}

}
